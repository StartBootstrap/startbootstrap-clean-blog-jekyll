</span>            <span class="n">texto</span> <span class="o">=</span> <span class="n">texto</span> <span class="o">+</span><span class="s">" "</span><span class="o">+</span><span class="nb">str</span><span class="p">(</span><span class="n">s</span><span class="p">).</span><span class="n">replace</span><span class="p">(</span><span class="n">s</span><span class="p">,</span> <span class="sa">f</span><span class="s">"&lt;mark&gt;</span><span class="si">{</span><span class="n">s</span><span class="si">}</span><span class="s">&lt;/mark&gt;"</span><span class="p">)</span>
        <span class="k">else</span><span class="p">:</span>
            <span class="n">texto</span> <span class="o">=</span> <span class="n">texto</span> <span class="o">+</span><span class="s">" "</span><span class="o">+</span> <span class="n">s</span>
            
    <span class="n">display</span><span class="p">(</span><span class="n">HTML</span><span class="p">(</span><span class="sa">f</span><span class="s">'&lt;h1&gt;</span><span class="si">{</span><span class="n">titulo</span><span class="si">}</span><span class="s">&lt;/h1&gt;'</span><span class="p">))</span>
    <span class="n">display</span><span class="p">(</span><span class="n">HTML</span><span class="p">(</span><span class="sa">f</span><span class="s">'Site:&lt;a&gt;</span><span class="si">{</span><span class="n">site</span><span class="si">}</span><span class="s">&lt;/a&gt;'</span><span class="p">))</span>
    <span class="n">display</span><span class="p">(</span><span class="n">HTML</span><span class="p">(</span><span class="sa">f</span><span class="s">""" </span><span class="si">{</span><span class="n">texto</span><span class="si">}</span><span class="s"> """</span><span class="p">))</span>
    <span class="n">display</span><span class="p">(</span><span class="n">HTML</span><span class="p">(</span><span class="sa">f</span><span class="s">'&lt;h1&gt; Resumo &lt;/h1&gt;'</span><span class="p">))</span>
    <span class="n">display</span><span class="p">(</span><span class="n">HTML</span><span class="p">(</span><span class="sa">f</span><span class="s">"&lt;mark&gt;</span><span class="si">{</span><span class="n">texto_resumo</span><span class="si">}</span><span class="s">&lt;/mark&gt;"</span><span class="p">))</span>
