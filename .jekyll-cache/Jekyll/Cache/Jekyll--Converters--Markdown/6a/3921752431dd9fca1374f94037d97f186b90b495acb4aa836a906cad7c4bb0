    <span class="k">for</span> <span class="n">s</span> <span class="ow">in</span> <span class="n">sentencas</span><span class="p">:</span>
        <span class="k">if</span> <span class="n">s</span> <span class="ow">in</span> <span class="n">sent_res</span><span class="p">:</span>
